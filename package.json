{
  "name": "gc-chat-client",
  "version": "1.0.0",
  "description": "GC Chat Client",
  "main": "main.js",
  "author": {
    "name": "Bill Grimm",
    "email": "bill_grim@outlook.com"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist:win32": "electron-builder -w",
    "build:all": "electron-builder -wml",
    "build:linux": "electron-builder -l",
    "build:mac": "electron-builder -m",
    "build:windows": "electron-packager . gc-chat-client --platform=win32 --arch=x64 --out dist/ && electron-installer-windows --src dist/gc-chat-client-win32-x64 --dest dist/",
    "postinstall": "electron-builder install-app-deps",
    "publish": "build --mac --linux --win -p always",
    "release": "release-it"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^3.0.7",
    "electron-builder": "latest",
    "release-it": "^8.1.0"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "stompjs": "^2.3.3",
    "sockjs": "^0.3.19",
    "rpmbuild": "^0.0.22",
    "electron-updater": "^4.0.0"
  },
  "build": {
    "appId": "GCChatClient",
    "mac": {
      "publish": [
        "github"
      ],
      "target": "dmg"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "portable"
        }
      ]
    }
  },
  "__npminstall_done": false,
  "publish": [
    {
      "provider": "github",
      "owner": "BillGrim",
      "repo": "gc-chat-client"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BillGrim/gc-chat-client.git"
  }
}